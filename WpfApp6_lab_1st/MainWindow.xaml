<Window x:Class="WpfApp6_lab_1st.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6_lab_1st"
        mc:Ignorable="d"
         Title="Вычислитель" Height="300" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Введите три числа:" Margin="0,0,0,10"/>
        <TextBox x:Name="num1Box" Margin="0,5"/>
        <TextBox x:Name="num2Box" Margin="0,5"/>
        <TextBox x:Name="num3Box" Margin="0,5"/>
        <Button Content="Вычислить" Click="Button_Click" Height="30"/>
        <TextBlock x:Name="resultText" Margin="0,20" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
