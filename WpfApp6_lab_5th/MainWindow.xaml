<Window x:Class="WpfApp6_lab_5th.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6_lab_5th"
        mc:Ignorable="d"
      Title="Поворот матрицы на 90°" 
        Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Поворот неквадратной матрицы на 90° по часовой стрелке" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Строк (m): " VerticalAlignment="Center"/>
            <TextBox x:Name="RowsBox" Width="40" Text="0" Margin="5,0"/>
            <TextBlock Text="Столбцов (n): " VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox x:Name="ColsBox" Width="40" Text="0" Margin="5,0"/>
            <Button x:Name="CreateBtn" Content="Создать" Width="80" Margin="10,0" Click="CreateBtn_Click"/>
            <Button x:Name="RandomBtn" Content="Случайные числа" Width="120" Margin="10,0" Click="RandomBtn_Click"/>
        </StackPanel>
        <TextBlock Grid.Row="2" Text="Исходная матрица:" Margin="0,5"/>
        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
                      Background="#F5F5F5" BorderBrush="Gray" BorderThickness="1">
            <StackPanel x:Name="MatrixPanel" Margin="5"/>
        </ScrollViewer>
        <Button Grid.Row="4" x:Name="RotateBtn" Content="Повернуть на 90°" Height="35" Margin="0,10" Click="RotateBtn_Click"/>
        <TextBlock Grid.Row="5" Text="Матрица после поворота:" Margin="0,5"/>
        <ScrollViewer Grid.Row="6" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
                      Background="#F5F5F5" BorderBrush="Gray" BorderThickness="1">
            <StackPanel x:Name="ResultPanel" Margin="5"/>
        </ScrollViewer>
    </Grid>
</Window>