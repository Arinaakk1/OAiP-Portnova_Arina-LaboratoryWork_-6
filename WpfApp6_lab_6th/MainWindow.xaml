<Window x:Class="WpfApp6_lab_6th.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6_lab_6th"
        mc:Ignorable="d"
        Title="Возведение в степень" 
        Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Возведение числа в степень" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Число (first): " VerticalAlignment="Center" Width="100"/>
            <TextBox x:Name="FirstBox" Width="150" Text="0" Margin="5,0"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Степень (second): " VerticalAlignment="Center" Width="100"/>
            <TextBox x:Name="SecondBox" Width="150" Text="0" Margin="5,0"/>
        </StackPanel>
        <Button Grid.Row="3" x:Name="CalcBtn" Content="Вычислить" Height="30" Width="150" Margin="0,10" Click="CalcBtn_Click"/>
        <TextBlock Grid.Row="4" x:Name="ResultText" Text="Результат: " FontSize="14" Margin="0,10"/>
    </Grid>
</Window>