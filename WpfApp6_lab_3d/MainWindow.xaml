<Window x:Class="WpfApp6_lab_3d.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6_lab_3d"
        mc:Ignorable="d"
        Title="Замена элементов массива" 
        Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Замена элементов массива" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Размер массива: " VerticalAlignment="Center"/>
            <TextBox x:Name="SizeBox" Width="50" Text="0" Margin="5,0"/>
            <Button x:Name="CreateBtn" Content="Создать" Width="80" Margin="5,0" Click="CreateBtn_Click"/>
        </StackPanel>
        <TextBlock Grid.Row="2" Text="Исходный массив:" Margin="0,5"/>
        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ArrayPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5"/>
        </ScrollViewer>
        <StackPanel Grid.Row="4" Margin="0,10">
            <Button x:Name="ReplaceBtn" Content="Выполнить замену" Height="30" Margin="0,5" Click="ReplaceBtn_Click"/>
            <TextBlock x:Name="ResultText" Text="Результат появится здесь" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>